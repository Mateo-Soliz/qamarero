{
  "name": "qamarero",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "check": "biome check --write .",
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "db:push": "turbo -F @qamarero/db db:push",
    "db:studio": "turbo -F @qamarero/db db:studio",
    "db:generate": "turbo -F @qamarero/db db:generate",
    "db:migrate": "turbo -F @qamarero/db db:migrate",
    "db:start": "turbo -F @qamarero/db db:start",
    "db:watch": "turbo -F @qamarero/db db:watch",
    "db:stop": "turbo -F @qamarero/db db:stop",
    "db:down": "turbo -F @qamarero/db db:down"
  },
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "turbo": "^2.6.3",
    "@biomejs/biome": "^2.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "typescript": "catalog:",
    "@types/node": "^22.13.11"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --write ."
    ]
  },
  "packageManager": "pnpm@10.17.1"
}
